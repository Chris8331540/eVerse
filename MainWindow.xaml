<ui:FluentWindow x:Class="eVerse.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:views="clr-namespace:eVerse.Views"
                 xmlns:local="clr-namespace:eVerse"
                 Title="eVerse" Height="500" Width="800"
                 UseLayoutRounding="True"
                 SnapsToDevicePixels="True">
    <ui:FluentWindow.InputBindings>
        <KeyBinding Key="Escape"
                    Command="{Binding CloseProjectionCommand}" />
    </ui:FluentWindow.InputBindings>

    <ui:FluentWindow.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="SidebarItemStyle" TargetType="Border">
            <Setter Property="Focusable" Value="True" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Padding" Value="0 15 0 15" />
            <Setter Property="Margin" Value="0 5" />
            <Style.Triggers>
                <!-- When sidebar is expanded, increase left padding so text is indented -->
                <DataTrigger Binding="{Binding IsSidebarExpanded, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}" Value="True">
                    <Setter Property="Padding" Value="8,13,0,13" />
                </DataTrigger>

                <DataTrigger Binding="{Binding Path=(local:SidebarItemHelper.IsSelected), RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Nuevo: estilo para centrar el contenido interno cuando el sidebar está cerrado -->
        <Style x:Key="SidebarInnerStackStyle" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSidebarExpanded, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}}" Value="False">
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </ui:FluentWindow.Resources>

    <Grid UseLayoutRounding="True" SnapsToDevicePixels="True">
        <ui:TitleBar Title="eVerse" />

        <Grid Margin="0 40 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="SidebarColumn" Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ========================== -->
            <!--       SIDEBAR LATERAL      -->
            <!-- ========================== -->
            <Border>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- HAMBURGUESA: contenedor clickable con tres rayas -->
                    <Border x:Name="ToggleSidebarContainer"
                            Width="40"
                            Height="40"
                            Margin="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            MouseLeftButtonUp="ToggleSidebarContainer_MouseLeftButtonUp"
                            Background="Transparent">
                        <StackPanel Width="20" Height="18" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
                            <Rectangle Height="2" Fill="White" RadiusX="1" RadiusY="1" Margin="0,2"/>
                            <Rectangle Height="2" Fill="White" RadiusX="1" RadiusY="1" Margin="0,2"/>
                            <Rectangle Height="2" Fill="White" RadiusX="1" RadiusY="1" Margin="0,2"/>
                        </StackPanel>
                    </Border>

                    <!-- OPCIONES DEL MENÚ -->
                    <StackPanel Grid.Row="1" Margin="10 20 10 10">
                        <!-- Crear Canción -->
                        <Border x:Name="CrearBorder" Style="{StaticResource SidebarItemStyle}" MouseLeftButtonUp="SidebarItem_MouseLeftButtonUp">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding ShowCreateSongCommand}" />
                            </Border.InputBindings>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource SidebarInnerStackStyle}">
                                <ui:SymbolIcon Symbol="Add28" Width="24"/>
                                <TextBlock Text="Crear canción"
                                           Margin="10 0 0 0"
                                           VerticalAlignment="Center"
                                           x:Name="TextCrear"/>
                            </StackPanel>
                        </Border>

                        <!-- Lista Canciones -->
                        <Border x:Name="ListaBorder" Style="{StaticResource SidebarItemStyle}" MouseLeftButtonUp="SidebarItem_MouseLeftButtonUp">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding ShowSongListCommand}" />
                            </Border.InputBindings>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource SidebarInnerStackStyle}">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE189;"           
                                   FontSize="18"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>       
                                <TextBlock Text="Lista de canciones"
                                           Margin="10 0 0 0"
                                           VerticalAlignment="Center"
                                           x:Name="TextLista"/>
                            </StackPanel>
                        </Border>

                        <!-- Lista Canciones Editar -->
                        <Border x:Name="EditListaBorder" Style="{StaticResource SidebarItemStyle}" MouseLeftButtonUp="SidebarItem_MouseLeftButtonUp">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding ShowEditSongListCommand}" />
                            </Border.InputBindings>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource SidebarInnerStackStyle}">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE70F;"           
                                   FontSize="18"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Lista de canciones"
                                           Margin="10 0 0 0"
                                           VerticalAlignment="Center"
                                           x:Name="EditTextLista"/>
                            </StackPanel>
                        </Border>


                        <!-- Websocket config -->
                        <Border x:Name="WsConfigBorder" Style="{StaticResource SidebarItemStyle}" MouseLeftButtonUp="SidebarItem_MouseLeftButtonUp">
                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding ShowWebsocketConfigCommand}" />
                            </Border.InputBindings>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource SidebarInnerStackStyle}">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                   Text="&#xE753;"           
                                   FontSize="18"
                                   Foreground="White"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                <TextBlock Text="Configuración websocket"
                                           Margin="10 0 0 0"
                                           VerticalAlignment="Center"
                                           x:Name="WsConfigText"
                                           Visibility="{Binding IsSidebarExpanded, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}}, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========================== -->
            <!--         CONTENIDO          -->
            <!-- ========================== -->
            <ContentControl Grid.Column="1"
                            Content="{Binding CurrentView}"
                            Margin="0"/>
        </Grid>
    </Grid>

</ui:FluentWindow>
