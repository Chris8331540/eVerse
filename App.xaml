<Application x:Class="eVerse.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:eVerse"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="UIBrushBackground" Color="#1E1E1E"/>
            <Style x:Key="MyWindowStyle" TargetType="Window">
                <Setter Property="Background" Value="{StaticResource UIBrushBackground}" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="White" />
                <!-- Más setters para estilo común -->
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
