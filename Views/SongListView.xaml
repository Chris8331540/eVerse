<UserControl x:Class="eVerse.Views.SongListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:eVerse.Converters"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:eVerse.Views"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <conv:TextEqualityConverter x:Key="TextEqualityConverter" />
    </UserControl.Resources>

    <Grid Margin="20" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Configuración general arriba -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
        </Grid.RowDefinitions>


        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- COLUMNA IZQUIERDA: Buscador + Lista -->
            <ui:Card Padding="10" Margin="0 0 15 0" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Buscador -->
                        <RowDefinition Height="*"/>
                        <!-- Lista canciones -->
                    </Grid.RowDefinitions>

                    <!-- BUSCADOR -->
                    <ui:TextBox PlaceholderText="Buscar canciones"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                Width="200" Margin="5"
                                Grid.Row="0"/>

                    <!-- LISTA DE CANCIONES -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 10 0 0" Grid.Row="1">
                        <ListBox ItemsSource="{Binding Songs}"
                                 SelectedItem="{Binding SelectedSong}"
                                 SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <ui:TextBlock Text="{Binding SongNumber}"
                                                      FontWeight="SemiBold"
                                                      Margin="5 0"/>
                                        <ui:TextBlock Text=" - " Margin="0"/>
                                        <ui:TextBlock Text="{Binding Title}" Margin="0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </ui:Card>

            <!-- COLUMNA DERECHA: Estrofas -->
            <ui:Card Grid.Column="1" Padding="15">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- TÍTULO -->
                    <ui:TextBlock Text="{Binding SelectedSong.Title}"
                                  FontSize="20"
                                  FontWeight="Bold"
                                  Margin="0 0 0 10"/>

                    <!-- ESTROFAS -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">

                        <ItemsControl ItemsSource="{Binding SelectedSong.Verses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>

                                    <Button 
                                        Margin="0 0 0 10"
                                        Command="{Binding DataContext.ShowVerseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding Text}"
                                        Background="Transparent"
                                        BorderBrush="{x:Null}"
                                        Padding="0"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch">
                                        <ui:Card Margin="0 0 0 0" Padding="10">
                                            <ui:Card.Background>
                                                <MultiBinding Converter="{StaticResource TextEqualityConverter}">
                                                    <Binding Path="Text" />
                                                    <!-- Bind to the VM's ProjectedText via the UserControl DataContext -->
                                                    <Binding Path="DataContext.ProjectedText" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                </MultiBinding>
                                            </ui:Card.Background>
                                            <StackPanel>
                                                <ui:TextBlock Text="Estrofa"
                                                              FontWeight="Bold"
                                                              Margin="0 0 0 5"
                                                              HorizontalAlignment="Stretch" />
                                                <ui:TextBlock Text="{Binding Text}"
                                                              TextWrapping="Wrap"
                                                              HorizontalAlignment="Stretch" />
                                            </StackPanel>
                                        </ui:Card>
                                    </Button>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </ScrollViewer>
                </Grid>

            </ui:Card>

        </Grid>

    </Grid>
</UserControl>
