<UserControl x:Class="eVerse.Views.EditSongListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Configuración general arriba -->
            <RowDefinition Height="*"/>
            <!-- Contenido principal -->
        </Grid.RowDefinitions>

        <!-- FILA CONFIGURACIÓN COMPLETA -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0 0 0 10">

            <ui:ToggleSwitch IsChecked="{Binding ProjectionSettings.UseFade}"
                             Content="Fade"
                             Margin="5" VerticalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                <ui:TextBlock Text="Fade ms:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Minimum="0"
                        Maximum="2000"
                        Value="{Binding ProjectionSettings.FadeMs}"
                        Width="110"
                        VerticalAlignment="Center"/>
                <ui:TextBlock Text="{Binding ProjectionSettings.FadeMs}"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                <ui:TextBlock Text="Fuente:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox ItemsSource="{Binding AvailableFonts}"
                          SelectedItem="{Binding ProjectionSettings.FontFamily}"
                          Width="140"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                <ui:TextBlock Text="Tamaño (px):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Text="{Binding ProjectionSettings.FontSize}"
                         Width="60"/>
            </StackPanel>

        </StackPanel>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- COLUMNA IZQUIERDA: Buscador + Lista -->
            <ui:Card Padding="10" Margin="0 0 15 0" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Buscador -->
                        <RowDefinition Height="*"/>
                        <!-- Lista canciones -->
                    </Grid.RowDefinitions>

                    <!-- BUSCADOR -->
                    <ui:TextBox PlaceholderText="Buscar canciones"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                Width="200" Margin="5"
                                Grid.Row="0"/>

                    <!-- LISTA DE CANCIONES -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0 10 0 0" Grid.Row="1">
                        <ListBox ItemsSource="{Binding Songs}"
                                 SelectedItem="{Binding SelectedSong}"
                                 SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5">
                                        <ui:TextBlock Text="{Binding SongNumber}"
                                                      FontWeight="SemiBold"
                                                      Margin="5 0"/>
                                        <ui:TextBlock Text=" - " Margin="0"/>
                                        <ui:TextBlock Text="{Binding Title}" Margin="0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </ui:Card>

            <!-- COLUMNA DERECHA: Estrofas -->
            <ui:Card Grid.Column="1" Padding="15">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- TÍTULO -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ui:TextBox Grid.Column="0"
                                     Text="{Binding SelectedSong.Title, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center" />

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button
                                Content="Añadir Estrofa"
                                Margin="0,0,10,0"
                                Padding="10,4"
                                VerticalAlignment="Center"
                                Command="{Binding AddVerseCommand}" />

                            <Button Grid.Column="1"
                                    Content="Guardar"
                                    Margin="0,0,0,0"
                                    Padding="10,4"
                                    VerticalAlignment="Center"
                                    x:Name="SaveSongButton"
                                    Command="{Binding SaveSongCommand}"
                                    CommandParameter="{Binding SelectedSong}" />
                        </StackPanel>
                    </Grid>

                    <!-- ESTROFAS -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto">

                        <ItemsControl ItemsSource="{Binding SelectedSongVerses}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <UniformGrid Columns="2" Margin="0 0 0 10">

                                        <ui:TextBox 
                                            AcceptsReturn="True"
                                            AcceptsTab="True"
                                            TextWrapping="Wrap"
                                            VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Auto"
                                            MinHeight="80"
                                            VerticalAlignment="Stretch"
                                            Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            PlaceholderText="Texto de la estrofa"
                                            Margin="0 10 0 10"/>

                                        <ui:Button
                                            Margin="0 10 0 10"
                                            Content="X"
                                            Appearance="Secondary"
                                            MinWidth="40"
                                            VerticalAlignment="Stretch"
                                            Command="{Binding DataContext.RemoveVerseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}" />

                                    </UniformGrid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </ScrollViewer>
                </Grid>

            </ui:Card>

        </Grid>

    </Grid>
</UserControl>
